          div(class="space-y-2")
            div(class="flex items-center")
              div(class="w-2 h-2 bg-green-400 rounded-full mr-3")
              span(class="text-sm text-gray-600") Database SQLite
              span(class="text-xs text-green-600 ml-auto") Online
            
            div(class="flex items-center")
              div(class="w-2 h-2 bg-green-400 rounded-full mr-3")
              span(class="text-sm text-gray-600") Web Server
              span(class="text-xs text-green-600 ml-auto") Running
            
            div(class="flex items-center")
              div(class="w-2 h-2 bg-yellow-400 rounded-full mr-3")
              span(class="text-sm text-gray-600") External API
              span(class="text-xs text-yellow-600 ml-auto") Checking...

  div(class="mt-8 bg-white rounded-lg shadow")
    div(class="px-6 py-4 border-b border-gray-200")
      h3(class="text-lg font-medium text-gray-900") Aktivitas Terbaru
    div(class="p-6")
      div(class="text-center py-8 text-gray-500")
        svg(class="w-12 h-12 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24")
          path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z")
