block scripts
  script.
    async function checkApiStatus() {
      try {
        const response = await fetch('/api/anime/status');
        const statusElement = document.querySelector('.text-yellow-600');
        if (response.ok) {
          statusElement.textContent = 'Online';
          statusElement.className = 'text-xs text-green-600 ml-auto';
          statusElement.previousElementSibling.className = 'w-2 h-2 bg-green-400 rounded-full mr-3';
        } else {
          statusElement.textContent = 'Error';
          statusElement.className = 'text-xs text-red-600 ml-auto';
          statusElement.previousElementSibling.className = 'w-2 h-2 bg-red-400 rounded-full mr-3';
        }
      } catch (error) {
        const statusElement = document.querySelector('.text-yellow-600');
        statusElement.textContent = 'Offline';
        statusElement.className = 'text-xs text-red-600 ml-auto';
        statusElement.previousElementSibling.className = 'w-2 h-2 bg-red-400 rounded-full mr-3';
      }
    }

    checkApiStatus();
    
    setInterval(() => {
      checkApiStatus();
    }, 30000);
