extends layout

block content
  div(class="container mx-auto px-4 py-6")
    div(class="grid grid-cols-1 lg:grid-cols-4 gap-8")
      div(class="lg:col-span-3")
        div(class="mb-6")
          h1(class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4")
            if keyword
              | Hasil Pencarian: "#{keyword}"
            else
              | Pencarian Anime
          
          form(action="/search" method="GET" class="mb-6")
            div(class="flex")
              input(
                type="text"
                name="q"
                placeholder="Masukkan judul anime..."
                value=keyword || ""
                class="flex-1 px-4 py-3 border border-gray-300 rounded-l-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm text-gray-900 dark:text-gray-100"
                required
              )
              button(
                type="submit"
                class="px-6 py-3 bg-primary-600 text-white rounded-r-lg hover:bg-primary-700 transition-colors font-medium"
              ) Cari

        if keyword && searchResults
          if searchResults.length > 0
            div(class="mb-6")
              p(class="text-gray-600 dark:text-gray-300") Ditemukan #{searchResults.length} hasil untuk "#{keyword}"
            
            div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 mb-8")
              each anime in searchResults
                div(class="anime-card group relative")
                  a(href=`/anime/${anime.slug}`)
                    div(class="relative bg-white/90 dark:bg-gray-800/90 rounded-2xl shadow-lg hover:shadow-2xl dark:shadow-gray-900/50 overflow-hidden transform transition-all duration-300 hover:scale-105 border border-gray-100 dark:border-gray-700 backdrop-blur-sm")
                      div(class="relative overflow-hidden")
                        img(src=anime.poster alt=anime.title class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110" onerror="this.onerror=null;this.src='https://placehold.co/400x600?text=No+Image';")
                        div(class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300")
                        if anime.status
                          div(class="absolute top-3 left-3 bg-gradient-to-r from-primary-500 to-primary-600 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg backdrop-blur-sm")= anime.status
                        if anime.rating
                          div(class="absolute top-3 right-3 bg-black/70 backdrop-blur-sm text-white text-xs px-2 py-1 rounded-full flex items-center")
                            svg(class="w-3 h-3 mr-1 text-yellow-400" fill="currentColor" viewBox="0 0 20 20")
                              path(d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z")
                            span= anime.rating
                        div(class="absolute bottom-0 left-0 right-0 p-4 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300")
                          div(class="flex items-center justify-between text-white")
                            div(class="flex items-center space-x-2")
                              svg(class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20")
                                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z")
                              span(class="text-sm font-medium") Hasil
                            button(class="bg-white/20 backdrop-blur-sm hover:bg-white/30 text-white px-3 py-1 rounded-full text-xs font-medium transition-colors duration-200") Tonton
                      div(class="p-4")
                        h3(class="font-bold text-sm text-gray-900 dark:text-gray-100 line-clamp-2 mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-200")= anime.title
                        if anime.genres && anime.genres.length > 0
                          div(class="flex items-center text-xs text-gray-500 dark:text-gray-400")
                            svg(class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
                            span= anime.genres.map((genre) => genre.name).join(', ')

        else if !keyword
          div(class="text-center py-12")
            svg(class="w-16 h-16 text-gray-400 dark:text-gray-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z")
            h3(class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2") Cari Anime Favorit Anda
            p(class="text-gray-600 dark:text-gray-300 mb-6") Masukkan judul anime yang ingin Anda tonton
            
            div(class="max-w-md mx-auto")
              h4(class="font-medium text-gray-900 dark:text-gray-100 mb-3") Pencarian Populer:
              div(class="flex flex-wrap gap-2 justify-center")
                each term in ['Naruto', 'One Piece', 'Attack on Titan', 'Demon Slayer', 'Jujutsu Kaisen', 'My Hero Academia']
                  a(href=`/search?q=${encodeURIComponent(term)}` class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-200 text-sm rounded-full hover:bg-primary-100 hover:text-primary-700 transition-colors")= term

        if adSlots && adSlots.contentBottom && adSlots.contentBottom.length > 0
          div(class="mb-6")
            each ad in adSlots.contentBottom
              div(class="ad-slot bg-gray-100 dark:bg-gray-800 rounded-lg")!= ad.content

      div(class="lg:col-span-1")
        if adSlots && adSlots.sidebarTop && adSlots.sidebarTop.length > 0
          div(class="mb-6")
            each ad in adSlots.sidebarTop
              div(class="ad-slot bg-gray-100 dark:bg-gray-800 rounded-lg")!= ad.content

        div(class="bg-white dark:bg-gray-900 rounded-lg shadow-sm p-6 mb-6")
          h3(class="font-bold text-gray-900 dark:text-gray-100 mb-4") Tips Pencarian
          div(class="space-y-3 text-sm text-gray-600 dark:text-gray-300")
            div(class="flex items-start")
              svg(class="w-4 h-4 text-primary-600 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
              span Gunakan kata kunci yang spesifik untuk hasil yang lebih akurat
            div(class="flex items-start")
              svg(class="w-4 h-4 text-primary-600 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
              span Coba gunakan judul bahasa Inggris atau Jepang
            div(class="flex items-start")
              svg(class="w-4 h-4 text-primary-600 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
              span Gunakan kata kunci yang lebih umum jika tidak menemukan hasil

        div(class="bg-white dark:bg-gray-900 rounded-lg shadow-sm p-6 mb-6")
          h3(class="font-bold text-gray-900 dark:text-gray-100 mb-4") Genre Populer
          div(class="flex flex-wrap gap-2 max-h-[200px] overflow-x-hidden")
            each genre in genres
              a(href=`/genres/${genre.slug}` class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-200 text-sm rounded-full hover:bg-primary-100 hover:text-primary-700 transition-colors")= genre.name

        div(class="bg-white dark:bg-gray-900 rounded-lg shadow-sm p-6 mb-6")
          h3(class="font-bold text-gray-900 dark:text-gray-100 mb-4") Menu Cepat
          div(class="space-y-3")
            a(href="/ongoing" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z")
              span Anime Ongoing
            a(href="/complete" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z")
              span Anime Complete
            a(href="/genres" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
              span Genre Anime

        if adSlots && adSlots.sidebarBottom && adSlots.sidebarBottom.length > 0
          div(class="mb-6")
            each ad in adSlots.sidebarBottom
              div(class="ad-slot bg-gray-100 dark:bg-gray-800 rounded-lg")!= ad.content

block scripts
  script.
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.querySelector('input[name="q"]');
      if (searchInput && !searchInput.value) {
        searchInput.focus();
      }
    });

    const searchInput = document.querySelector('input[name="q"]');
    let searchTimeout;

    if (searchInput) {
      searchInput.addEventListener('input', function() {
        const query = this.value.trim();
        
        clearTimeout(searchTimeout);
        
        if (query.length >= 2) {
          searchTimeout = setTimeout(() => {
            console.log('Search suggestion for:', query);
          }, 300);
        }
      });
    }

    if (typeof gtag !== 'undefined' && '#{keyword}') {
      gtag('event', 'search', {
        search_term: '#{keyword}',
        results_count: #{searchResults ? searchResults.length : 0}
      });
    }
