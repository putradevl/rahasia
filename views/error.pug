extends layout

block content
  div(class="container mx-auto px-4 py-12")
    div(class="max-w-md mx-auto text-center")
      div(class="mb-8")
        if error.status === 404
          svg(class="w-24 h-24 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.5-.935-6.072-2.456M3 12a9 9 0 1118 0 9 9 0 01-18 0z")
        else
          svg(class="w-24 h-24 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z")
      
      h1(class="text-4xl font-bold text-gray-900 mb-4")= error.status || 500
      
      h2(class="text-xl font-medium text-gray-700 mb-6")
        if error.status === 404
          | Halaman Tidak Ditemukan
        else
          | Terjadi Kesalahan
      
      p(class="text-gray-600 mb-8")= error.message || "Terjadi kesalahan yang tidak terduga"
      
      div(class="space-y-4")
        a(href="/" class="inline-block bg-primary-600 text-white px-6 py-3 rounded-lg hover:bg-primary-700 transition-colors font-medium") Kembali ke Beranda
        
        if error.status === 404
          div
            a(href="/search" class="text-primary-600 hover:text-primary-700 font-medium") Coba Cari Anime
        else
          div
            button(onclick="history.back()" class="text-primary-600 hover:text-primary-700 font-medium") Kembali ke Halaman Sebelumnya

      if process.env.NODE_ENV !== 'production' && error.stack
        div(class="mt-12 text-left")
          details(class="bg-gray-100 rounded-lg p-4")
            summary(class="cursor-pointer font-medium text-gray-700 mb-2") Debug Information
            pre(class="text-xs text-gray-600 overflow-auto")= error.stack
